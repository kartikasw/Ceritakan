<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.perempuan">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Perempuan">
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ReadMoreActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activity.profile.ProfileEditActivity"
            android:exported="true" />
        <activity
            android:name=".activity.post.PostShowActivity"
            android:exported="true" />
        <activity
            android:name=".activity.post.PostEditActivity"
            android:exported="true" />
        <activity
            android:name=".activity.post.PostCreateActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LandingActivity"
            android:exported="true" />
        <activity
            android:name=".activity.auth.RegisActivity"
            android:exported="true" />
        <activity
            android:name=".activity.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>