<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/lightBackground"
    tools:context=".activity.LandingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="26.23dp"
                android:text="SETIAP PEREMPUAN \nPUNYA HAK \nUNTUK DIHARGAI"
                android:textAlignment="center"
                style="@style/text_normal"
                android:textSize="25sp"
                android:textFontWeight="700"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="194.15dp"
                android:layout_height="200dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/img" />

            <LinearLayout
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:background="@drawable/background_yellow"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegis"
                    style="@style/button"
                    android:layout_marginTop="33dp"
                    android:text="Regist" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    style="@style/button"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="33dp"
                    android:text="Login" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                style="@style/text_normal"
                android:textSize="20sp"
                android:text="CERITAKAN"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by Kelompok 8"
                android:textAlignment="center"
                style="@style/text_normal"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>